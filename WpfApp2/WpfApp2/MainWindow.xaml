<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.442,0.5" HorizontalAlignment="Left" Width="790">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="435*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>





        </Grid.RowDefinitions>
        <DataGrid 
            x:Name="MyDataGrid"
            Margin="0,16,0,15"   
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            AutoGenerateColumns="False"
            CanUserAddRows="True"
            IsReadOnly="True" 
            HorizontalGridLinesBrush="#FFBDBDBD" 
            VerticalGridLinesBrush="#FFBDBDBD" 
            CanUserReorderColumns="False" 
            RenderTransformOrigin="0.534,0.491" HorizontalAlignment="Center" Width="322" Grid.ColumnSpan="2"
            
            >
            <DataGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </DataGrid.RenderTransform>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Đã chọn" Binding="{Binding IsSelected}" Width="55"/>
                <DataGridTextColumn Header="Tài khoản" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <TabControl 
            Grid.Column="2"
            Margin="0,15,16,170" HorizontalAlignment="Right" Width="406"
           >
            <TabItem Header="Thông tin">
                <StackPanel Margin="10">
                    <TextBlock Text="Họ tên:"/>
                    <TextBox Width="200" Margin="0,5"/>
                    <TextBlock Text="Email:"/>
                    <TextBox Width="200" Margin="0,5"/>
                </StackPanel>
            </TabItem>

            <!-- Tab 2 -->
            <TabItem Header="Chức năng">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Button Content="Lưu" Width="100" Margin="5"/>
                    <Button Content="Hủy" Width="100" Margin="5"/>
                </StackPanel>
            </TabItem>
            <!-- Tab 2 -->
            <TabItem Header="Chức năng">
                <StackPanel Orientation="Horizontal" Margin="10" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <Button Content="Lưu" Width="100" Margin="5"/>
                    <Button Content="Hủy" Width="100" Margin="5"/>
                    <Button Content="Hủy" Width="100" Margin="5"/>
                    <Button Content="Hủy" Width="100" Margin="5"/>
                    <Button Content="Hủy" Width="100" Margin="5"/>
                    <Button Content="Hủy" Width="100" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
