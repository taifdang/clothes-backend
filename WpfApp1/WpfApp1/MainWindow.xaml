<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="551" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="679*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.ColumnSpan="2" Height="535" VerticalAlignment="Center" HorizontalAlignment="Left" Width="800">
            <Button Content="Nút 1" />
            <Button Content="Nút 2" />
        </StackPanel>
        <WrapPanel Margin="272,397,25,31" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <WrapPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.119"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.553"/>
                </TransformGroup>
            </WrapPanel.RenderTransform>
            <Button Content="1" Width="100" Margin="5" />
            <Button Content="2" Width="100" Margin="5" />
            <Button Content="3" Width="100" Margin="5" Click="Button_Click_1" />
            <Button Content="1" Width="100" Margin="5" />
            <Button Content="2" Width="100" Margin="5" />
            <Button Content="3" Width="100" Margin="5" />
        </WrapPanel>
        <Grid Grid.Column="1" Margin="168,61,0,354">
            <!-- Định nghĩa 3 hàng -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Định nghĩa 2 cột -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Dòng 1 -->
            <TextBlock Text="Họ tên:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5"/>

            <!-- Dòng 2 -->
            <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>

            <!-- Dòng 3 -->
            <TextBlock Text="SĐT:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="5"/>
        </Grid>
        <DataGrid x:Name="MyDataGrid" AutoGenerateColumns="True" Height="200" Margin="10,168,288,167" Grid.ColumnSpan="2"/>
    </Grid>
    
    
</Window>
